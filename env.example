# Configuração do Banco de Dados
# Para desenvolvimento local, você pode usar um banco PostgreSQL local ou um serviço como Neon
DATABASE_URL="postgresql://username:password@localhost:5432/educhat_dev"

# Configuração do Ambiente
NODE_ENV="development"

# Configuração de Sessão
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Configuração do Z-API (WhatsApp)
ZAPI_TOKEN="your-zapi-token-here"
ZAPI_INSTANCE_ID="your-instance-id-here"

# Configuração da IA (Anthropic)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Configuração de Email (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key-here"

# Configuração de Upload
MAX_FILE_SIZE="52428800" # 50MB em bytes

# Configuração de CORS (para desenvolvimento)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Configuração de Timeout
REQUEST_TIMEOUT="10000"
RESPONSE_TIMEOUT="10000"

# Configuração de Logs
LOG_LEVEL="debug" 